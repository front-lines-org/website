---
import LargeTeaser from "../components/teasers/LargeTeaser.astro";
import ListTeaser from "../components/teasers/ListTeaser.astro";
import NewsSummary from "../components/teasers/NewsSummary.astro";
import SmallTeaser from "../components/teasers/SmallTeaser.astro";
import DefaultLayout from "../layouts/DefaultLayout.astro";
---

<style>
  @import url("https://fonts.googleapis.com/css2?family=Libre+Franklin:wght@300;400;500;700;900&family=Merriweather:ital,wght@0,400;0,700;0,900;1,400;1,700;1,900&display=swap");

  .scrim-t {
    background-image: linear-gradient(
      to bottom,
      rgba(0, 0, 0, 0.4),
      rgba(0, 0, 0, 0.2),
      rgba(0, 0, 0, 0)
    );
  }
</style>

<DefaultLayout>
  <div
    class="grid md:grid-cols-3 xl:grid-cols-4 relative mt-3 divide-x-2 divide-y divide-y-reverse"
  >
    <LargeTeaser />
    <SmallTeaser
      type="Analysis"
      imgSrc="https://images0.persgroep.net/rcs/Bugz3V19Pxf81zVJDmyLts6hgwI/diocontent/229957515/_crop/0/87/4044/2022/_fill/560/280?appId=93a17a8fd81db0de025c8abd1cca1279&quality=0.85"
      title="Dilemma Rusland in conflict Soedan: Welke partij moet Moskou steunen"
    />
    <NewsSummary />
    <SmallTeaser
      type="FANCULT"
      imgSrc="https://images0.persgroep.net/rcs/P_Nmjymv5nZ4OBrGKJW-iIAKqZs/diocontent/229952940/_focus/0.5/0.5/_fill/560/280?appId=93a17a8fd81db0de025c8abd1cca1279&quality=0.85"
      title=" Beauty en de fan: de online fangemeenschap is een ontembaar beest geworden"
    />
    <ListTeaser />
  </div>
</DefaultLayout>
