---
export interface Props {
	type: string;
    imgSrc: string;
    title: string;
}

const { type, imgSrc, title } = Astro.props;
---

<div class="p-3">
  <img
    src={imgSrc}
  />
  <h3 class="text-sm mx-auto mt-1 font-black uppercase" style="font-family: 'FrontLinesGroovy'">
    {type}
  </h3>
  <h3 class="text-lg font-serif">
    {title}
  </h3>
</div>
